# ============================================
# SharpLync Stable Deployment (Optimized)
# ============================================
# Deploys Laravel app to Azure Web App using
# ZIP artifact method (safe, reliable).
# Rebuilds Laravel caches automatically.
# ============================================

name: Deploy SharpLync Web App (Stable + Auto Cache)

on:
  push:
    branches:
      - main
  workflow_dispatch:

jobs:
  build:
    name: Build Laravel App
    runs-on: ubuntu-latest
    permissions:
      contents: read

    steps:
      # ‚úÖ Checkout code
      - name: Checkout repository
        uses: actions/checkout@v4

      # ‚úÖ Setup PHP
      - name: Setup PHP
        uses: shivammathur/setup-php@v2
        with:
          php-version: '8.2'
          extensions: mbstring, bcmath, intl, mysql, dom, curl, gd, xml
          tools: composer

      # ‚úÖ Install dependencies (production only)
      - name: Install dependencies
        run: |
          composer install --no-dev --prefer-dist --no-progress --no-interaction
          php artisan optimize:clear || true
          php artisan config:cache || true
          php artisan route:cache || true
          php artisan view:cache || true

      # ‚úÖ Package artifact (exclude junk)
      - name: Prepare deployment package
        run: |
          mkdir deploy_package
          rsync -av --exclude='.git*' --exclude='node_modules' --exclude='storage/logs' --exclude='tests' ./ ./deploy_package/

      - name: Upload artifact
        uses: actions/upload-artifact@v4
        with:
          name: sharplyncweb
          path: deploy_package

  deploy:
    name: Deploy to Azure Web App
    runs-on: ubuntu-latest
    needs: build
    permissions:
      id-token: write
      contents: read

    steps:
      - name: Download artifact
        uses: actions/download-artifact@v4
        with:
          name: sharplyncweb
          path: ./deploy_package

      # ‚úÖ Login to Azure (Service Principal)
      - name: Login to Azure
        uses: azure/login@v2
        with:
          client-id: ${{ secrets.AZUREAPPSERVICE_CLIENTID_B4715CA5DED04B79BA440450D1A6A411 }}
          tenant-id: ${{ secrets.AZUREAPPSERVICE_TENANTID_D789D8A638234D77BB7F727BDC5DABA1 }}
          subscription-id: ${{ secrets.AZUREAPPSERVICE_SUBSCRIPTIONID_9D05DB8E752345C184AD17941455D4CC }}

      # ‚úÖ Deploy ZIP artifact to Azure
      - name: Deploy to Azure Web App (ZIP)
        uses: azure/webapps-deploy@v3
        with:
          app-name: 'sharplyncweb'
          slot-name: 'Production'
          package: ./deploy_package

      # ‚úÖ Clear & rebuild Laravel caches remotely
      - name: Refresh Laravel cache on Azure
        run: |
          echo "‚öôÔ∏è Rebuilding Laravel cache remotely..."
          az webapp ssh --name sharplyncweb --resource-group SharpLync-RG --command "
            cd /home/site/wwwroot &&
            php artisan optimize:clear &&
            php artisan config:cache &&
            php artisan route:cache &&
            php artisan view:cache
          "
        continue-on-error: true

      # ‚úÖ Summary
      - name: Deployment summary
        run: echo "üöÄ SharpLync deployed successfully ‚Äî caches rebuilt, no downtime."